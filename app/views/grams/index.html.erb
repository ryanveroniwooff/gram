<div class="container grey col s12 m6">
  <div class="col s12 m6">
    <% @grams.each do |gram| %>
        <div class="card-panel">
        <div class="blue-text"><h4>
          <%= gram.user.email.split("@")[0] %>
          <span class="grey-text thin"><%="#{time_ago_in_words(gram.created_at)} ago"%></span></h4>
        </div>
        <%= image_tag gram.picture, class: 'img-responsive' %>
        <h5> 
          <%= gram.message %>
        </h5>
        <br class="clear-fix" />
        <div class="card-panel grey lighten-4">
        <div class="comments">
          <h5>Comments</h5>
          <% gram.comments.each do |comment| %>
            <div class="comment">
              <p class="left">
                <span class="comment_handle">
                  <%= comment.user.email.split("@")[0] %>: 
                </span>
                
                <%= comment.message %>
              </p>
            </div>
          <% end %>
          <br class="clear-fix" />
          <br class="clear-fix" />
          <%= simple_form_for Comment.new, url: gram_comments_path(gram) do |f| %>
            <%= f.input :message %>
            <%= f.submit 'Add Comment', class: 'my-btn' %>
          <% end %>
         <div class="gram-actions">
          <% if current_user && current_user == gram.user %>
            <%= link_to 'Edit', edit_gram_path(gram)%>
            <%= link_to 'Delete', gram_path(gram), method: :delete, data: {confirm: 'Are you sure?'} %>      
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
</div>